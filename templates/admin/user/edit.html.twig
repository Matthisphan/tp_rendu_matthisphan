{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="form-container">
            <h1 class="form-title">Edit User</h1>

            <form action="{{ path('app_admin_user_edit', {'id': user.id}) }}" method="POST" class="form">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, { 'attr': { 'class': 'form-input' } }) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.roles, 'Roles') }}
                    {{ form_widget(form.roles, { 'attr': { 'class': 'form-input' } }) }}
                    {{ form_errors(form.roles) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.plainPassword, 'Password') }}
                    {{ form_widget(form.plainPassword, { 'attr': { 'class': 'form-input' } }) }}
                    {{ form_errors(form.plainPassword) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.isVerified, 'Is Verified') }}
                    {{ form_widget(form.isVerified, { 'attr': { 'class': 'form-checkbox' } }) }}
                    {{ form_errors(form.isVerified) }}
                </div>

                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
                    <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Back to List</a>
                </div>

                {{ form_end(form) }}
            </form>

            <div class="delete-form">
                {{ include('admin/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
