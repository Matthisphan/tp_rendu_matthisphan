{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="admin-container">
            <h1 class="page-title">User Details</h1>

            <div class="card">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th>IsVerified</th>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="action-buttons">
                <a href="{{ path('app_admin_user_index') }}" class="btn back-btn">Back to list</a>
                <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn edit-btn">Edit</a>
            </div>

            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
