{% extends 'base.html.twig' %}

{% block title %}Language index{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <h1>Language index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for language in languages %}
                <tr>
                    <td>{{ language.id }}</td>
                    <td>{{ language.name }}</td>
                    <td>{{ language.code }}</td>
                    <td>
                        <a href="{{ path('app_admin_langugage_show', {'id': language.id}) }}">show</a>
                        <a href="{{ path('app_admin_langugage_edit', {'id': language.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_langugage_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
