{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="form-container">
            <h1 class="form-title">Edit Comment</h1>

            <form action="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" method="POST" class="form">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.content, 'Content') }}
                    {{ form_widget(form.content, { 'attr': { 'class': 'form-input' } }) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
                    <a href="{{ path('app_admin_comment_index') }}" class="btn btn-secondary">Back to List</a>
                </div>

                {{ form_end(form) }}
            </form>

            <div class="delete-form">
                {{ include('admin/comment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
