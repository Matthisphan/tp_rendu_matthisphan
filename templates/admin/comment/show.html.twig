{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="admin-container">
            <h1 class="page-title">Comment Details</h1>

            <div class="card">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ comment.id }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ comment.content }}</td>
                    </tr>
                    <tr>
                        <th>Article</th>
                        <td><a href="{{ path('article_show', {'id': article.id}) }}" class="link">{{ article.title }}</a></td>
                    </tr>
                    <tr>
                        <th>User</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="action-buttons">
                <a href="{{ path('app_admin_comment_index') }}" class="btn back-btn">Back to list</a>
                <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn edit-btn">Edit</a>
            </div>

            {{ include('admin/comment/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
