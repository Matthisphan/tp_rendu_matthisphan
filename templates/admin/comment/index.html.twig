{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <h1>Comment index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        <a href="{{ path('app_admin_comment_show', {'id': comment.id}) }}">show</a>
                        <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_comment_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
