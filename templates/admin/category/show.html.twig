{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="admin-container">
            <h1 class="page-title">Category Details</h1>

            <div class="card">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Label</th>
                        <td>{{ category.label }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="action-buttons">
                <a href="{{ path('app_admin_category_index') }}" class="btn back-btn">Back to list</a>
                <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn edit-btn">Edit</a>
            </div>

            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
