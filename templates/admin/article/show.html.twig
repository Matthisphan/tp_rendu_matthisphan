{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="containerPosition">
    <div class="containerLeftMenu">
        {% include 'parts/leftMenu.html.twig' %}
    </div>

    <div class="containerMainArticleShow">
        <div class="admin-container">
            <h1 class="page-title">Article Details</h1>

            <div class="card">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ article.title }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ article.content }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="action-buttons">
                <a href="{{ path('app_admin_article_index') }}" class="btn back-btn">Back to list</a>
                <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn edit-btn">Edit</a>
            </div>

            {{ include('admin/article/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
