<aside style="width: 20%; padding-right: 10px; border-right: 1px solid #ccc;">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="font-bold text-lg text-gray-700 mb-8">
            <span>Bienvenue, {{ app.user.email }} !</span>
        </div>
    {% endif %}

    <h3>Catégories</h3>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a>
            </li>
        {% endfor %}
    </ul>

    <h3>Languages</h3>
    <ul>
        {% for language in languages %}
            <li>
                <a href="{{ path('language_show', {'id': language.id}) }}">{{ language.name }}</a>
            </li>
        {% endfor %}
    </ul>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_logout') }}" class="">
            <span>Déconnexion</span>
        </a>
    {% else %}
        <a href="{{ path('app_login') }}" class="">
            <span>Connexion</span>
        </a>

        <a href="{{ path('app_register') }}" class="">
            <span>Inscription</span>
        </a>
    {% endif %}
</aside>
